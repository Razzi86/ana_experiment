<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ana_robot">

    <xacro:include filename="inertial_macros.xacro"/>
    <xacro:property name="meshes_dir" value="/home/aidan/ros_ws/src/ana/meshes/" />

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- CHASSIS LINK -->

    <link name="base_link">

    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.001 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1175 0.0835 0.0295"/> <!-- chassis location ajusted to be in the middle of the chassis -->
            <geometry>
                <mesh filename="package://ana/meshes/ana_chassis.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.1175 0.0835 0.0295"/> <!-- chassis location ajusted to be in the middle of the chassis -->
            <geometry>
                <mesh filename="package://ana/meshes/ana_chassis.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.235" y="0.17" z="0.0"> <!-- kiligrams -->
            <origin xyz="0.1175 0.0835 0.0295" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- FRONT LEFT WHEEL LINK -->

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.104 0.0975 0" rpy="-1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.027" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0325"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.027" radius = "0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>
    
    <!-- FRONT RIGHT WHEEL LINK -->

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.104 -0.1005 0" rpy="1.5708 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.027" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0325"/>
            </geometry>
        </collision>
