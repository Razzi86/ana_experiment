    <gazebo reference="back_right_wheel">
        <material>Gazebo/Black</material>
        <!-- <mu1 value="0.001"/> -->           <!--friction does not want to work -->
        <!-- <mu2 value="0.001"/> -->
    </gazebo>

</robot>